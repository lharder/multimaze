local MSG_INTERACT = hash( "interact" )
local MSG_SET_PROPS = hash( "setProps" )

go.property( "on", false )


-- helpers ----------------------------
local function press( self )
	if self.animTime < socket.gettime() then
		self.animTime = socket.gettime() + 1
		
		local suffix = "Off"
		if self.on then suffix = "On" end
		
		sprite.play_flipbook( "#sprite", self.color .. suffix, function() 
			self.animTime = 0
		end )
		
		for i, name in ipairs( self.listeners ) do
			-- pprint( "message to " .. name .. " (" .. MAP.objects[ name ] .. ")" )
			msg.post( MAP.objects[ name ], MSG_INTERACT, {} )
		end
	end
end


-- methods ----------------------------
function init( self )
	go.set_scale( .6 )
	self.animTime = 0
end


function setup( self, params ) 
	if params.properties.color then
		self.color = params.properties.color
		sprite.play_flipbook( "#sprite", self.color .. "fix" )

		self.listeners = params.properties.listeners:split( "," )
	end
end


function on_message( self, message_id, message, sender )
	if message_id == MSG_INTERACT then
		self.on = not self.on
		press( self )
		
	elseif message_id == MSG_SET_PROPS then
		setup( self, message )
	end
end